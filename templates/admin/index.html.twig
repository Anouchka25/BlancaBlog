{% extends 'base.html.twig' %}

{% block title %}Adminitration{% endblock %}

{% block body %}
    <h1>Adminitration du blog</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Summary</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.summary }}</td>
                <td>{{ post.content }}</td>
                <td>
                    <a href="{{ path('post_show', {slug: post.slug}) }}">show</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                    <a href="{{ path('post_delete', {'id': post.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



    <a href="{{ path('admin_post_new') }}">Create new</a>
{% endblock %}