{% extends "base.html.twig" %}
{% block body %}
    {% include 'post/header.html.twig' %}
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

            {% for post in posts %}
            <div class="post-preview">
                <a href="post.html">
                    <h2 class="post-title">
                        <a href="{{ path('post_show', {slug: post.slug}) }}">{{ post.title }}</a>
                    </h2>
                    <p class="post-subtitle">
                        {{ post.summary|md2html }}
                    </p>
                </a>
                <p class="post-meta">Posted by
                    <a href="{{ path('user_show', {'id': post.author.id}) }}">{{ post.author.fullName }}</a>
                    le {{ post.publishedAt|localizeddate('medium', 'short', null, 'UTC') }}
            </div>
            <hr>
            {% else %}
                <div class="well">{{ 'post.no_posts_found'|trans }}</div>
            {% endfor %}

                {% if posts.haveToPaginate %}
                    <div class="navigation text-center clearfix">
                        {{ pagerfanta(posts, 'twitter_bootstrap3_translated', {routeName: 'blog_index_paginated'}) }}
                    </div>
                {% endif %}

        </div>
    </div>
</div>
{% endblock %}

