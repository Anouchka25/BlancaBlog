<header class="masthead" style="background-image: url('buil/images/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1>{{ post.title }}</h1>
                    <h2 class="subheading">{{ post.summary|md2html }}</h2>
                    <span class="meta">Posted by
                <a href="#">{{ post.author.fullName }}</a>
                on August 24, 2018</span>
                </div>
            </div>
        </div>
    </div>
</header>